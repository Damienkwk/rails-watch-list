<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?movies);">
  <div class="container">
    <h1><strong>Save any kind of movies</strong></h1>
    <p>Classic</p>
  </div>
</div>
<div class="container my-5">
  <div class="d-flex justify-content-between">
    <h1>My Lists</h1>
    <p>
      <%= link_to "Create a movie list", new_list_path, class:"btn btn-success btn-flat" %>
    </p>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to list.name, list_path(list) %>
        <%= link_to "X",
          list_path(list),
          class: 'close',
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    <% end %>
  </div>
</div>
