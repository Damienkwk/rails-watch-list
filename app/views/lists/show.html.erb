<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h1><%= @list.name %></h1>
    <p>
      <%= link_to "add a movie", new_list_bookmark_path(@list), class:"btn btn-success btn-flat" %>
    </p>
  </div>
  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-sm-6 mt-2">
        <div class="card">
          <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
            <div class="card-body">
              <h6 class="card-title"><%= link_to bookmark.movie.title, list_path(bookmark.movie) %> ・ <%= bookmark.movie.rating %> ⭐️ </h5>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <p class="card-text">⎷ <%= bookmark.comment %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container my-5">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit %>
  <% end %>
</div>
